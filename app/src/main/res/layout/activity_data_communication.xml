<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.DataCommunicationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Connection Status Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#4CAF50"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/connectionStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connected to Device"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnect"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 21x21 Grid Table Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/gridTableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <com.linh.mdp.ui.ExpandableHeightGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="21"
                android:columnWidth="15dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:background="@android:color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Obstacle Controls Section (initially hidden) -->
        <ScrollView
            android:id="@+id/obstacleControlSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obstacle Controls:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select an action, then click on grid cells to apply:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/addObstacleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Add Obstacle"
                        android:backgroundTint="#FF5722"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/removeObstacleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Remove Obstacle"
                        android:backgroundTint="#9E9E9E"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/setDirectionButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Set Direction"
                        android:backgroundTint="#3F51B5"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Border Direction Selection (shown in Add mode only) -->
                <LinearLayout
                    android:id="@+id/borderDirectionSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Border Highlight Controls -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Highlight Obstacle Borders:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click to highlight borders of all obstacles:"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <!-- Directional border buttons in cross layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- North button (top) -->
                        <Button
                            android:id="@+id/northBorderButton"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="North"
                            android:backgroundTint="#2196F3"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <!-- West and East buttons (middle row) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/westBorderButton"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="West"
                                android:backgroundTint="#FF9800"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:layout_marginEnd="40dp" />

                            <Button
                                android:id="@+id/eastBorderButton"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="East"
                                android:backgroundTint="#9C27B0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:layout_marginStart="40dp" />

                        </LinearLayout>

                        <!-- South button (bottom) -->
                        <Button
                            android:id="@+id/southBorderButton"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="South"
                            android:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Obstacle coordinate display -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/obstacleActionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select an action above"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/cancelObstacleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:backgroundTint="#9E9E9E"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/confirmObstacleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/clearAllObstaclesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear All"
                        android:backgroundTint="#607D8B"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Robot Controls Section -->
        <ScrollView
            android:id="@+id/robotControlSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot Controls:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Place & Confirm in the same row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/placeRobotButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Place Robot (3x3)"
                        android:backgroundTint="#03A9F4"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/robotConfirmButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Confirm Placement"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Directional and Rotation buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Move Forward -->
                    <Button
                        android:id="@+id/robotUpButton"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:text="Move Forward"
                        android:enabled="false"
                        android:backgroundTint="#607D8B"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Turn Left / Turn Right row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/robotTurnLeftButton"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:text="Turn Left 90"
                            android:enabled="false"
                            android:backgroundTint="#455A64"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginEnd="16dp" />

                        <Button
                            android:id="@+id/robotTurnRightButton"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:text="Turn Right 90"
                            android:enabled="false"
                            android:backgroundTint="#455A64"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>

                    <!-- Move Back -->
                    <Button
                        android:id="@+id/robotDownButton"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:text="Move Back"
                        android:enabled="false"
                        android:backgroundTint="#607D8B"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/robotStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot: not placed"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>
        </ScrollView>

        <!-- Send Data Section -->
        <ScrollView
            android:id="@+id/sendDataSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Message:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/messageInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter message to send..."
                        android:inputType="text"
                        android:maxLines="3"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/white"
                        android:padding="12dp"
                        android:textColor="#333333"
                        android:textColorHint="#666666" />

                    <Button
                        android:id="@+id/sendButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:backgroundTint="#2196F3"
                        android:textColor="@android:color/white"
                        android:padding="12dp" />

                </LinearLayout>

                <!-- Quick Send Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/quickSend1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Hello"
                        android:backgroundTint="#FF9800"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/quickSend2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="OK"
                        android:backgroundTint="#FF9800"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/quickSend3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Test"
                        android:backgroundTint="#FF9800"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Sent Messages History -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sent Messages History:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/sentDataText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="top|start"
                        android:text="No messages sent yet..."
                        android:textColor="#333333"
                        android:textSize="12sp" />

                </ScrollView>

            </LinearLayout>

        </ScrollView>

        <!-- Received Data Section -->
        <ScrollView
            android:id="@+id/receiveDataSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:visibility="gone"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Received Messages:"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#9E9E9E"
                        android:text="Clear"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/receivedDataText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="top|start"
                        android:text="No messages received yet..."
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </ScrollView>

                <!-- Message Count -->
                <TextView
                    android:id="@+id/messageCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="end"
                    android:text="Messages: 0"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- FAB Menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_manage"
        app:tint="@android:color/white"
        app:backgroundTint="#2196F3" />

    <!-- Sub FABs (initially hidden) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:src="@android:drawable/ic_menu_send"
        app:tint="@android:color/white"
        app:backgroundTint="#4CAF50"
        app:fabSize="mini"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="144dp"
        android:src="@android:drawable/ic_menu_view"
        app:tint="@android:color/white"
        app:backgroundTint="#FF9800"
        app:fabSize="mini"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabObstacle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@android:color/white"
        app:backgroundTint="#FF5722"
        app:fabSize="mini"
        android:visibility="gone" />

    <!-- Robot FAB and label -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="256dp"
        android:src="@android:drawable/ic_menu_compass"
        app:tint="@android:color/white"
        app:backgroundTint="#03A9F4"
        app:fabSize="mini"
        android:visibility="gone" />

    <!-- FAB Labels -->
    <TextView
        android:id="@+id/fabSendLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="96dp"
        android:background="#333333"
        android:padding="8dp"
        android:text="Send Data"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fabReceiveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="152dp"
        android:background="#333333"
        android:padding="8dp"
        android:text="Receive Data"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fabObstacleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="208dp"
        android:background="#333333"
        android:padding="8dp"
        android:text="Obstacle Mode"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fabRobotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="264dp"
        android:background="#333333"
        android:padding="8dp"
        android:text="Robot Mode"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
